<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>

<BorderPane prefHeight="600.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="src.view.layout.settings.RootSettingsOverviewController">
   <bottom>
      <Pane prefHeight="71.0" prefWidth="500.0" BorderPane.alignment="CENTER">
         <children>
            <ButtonBar layoutX="1.0" layoutY="16.0" nodeOrientation="LEFT_TO_RIGHT" prefHeight="40.0" prefWidth="353.0">
              <buttons>
                <Button fx:id="okButton" alignment="CENTER" mnemonicParsing="false" onAction="#saveHandler" text="Save" />
                  <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#cancelhandler" text="Cancel" />
              </buttons>
            </ButtonBar>
         </children>
      </Pane>
   </bottom>
   <center>
      <ScrollPane fx:id="scrollPane" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
   </center>
</BorderPane>
